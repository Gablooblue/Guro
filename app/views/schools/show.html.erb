<p id="notice"><%= notice %></p>

<div class = "container" id = "default-padding">
    <div class = "panel panel-default">
	<div class = "panel-body">
	    <h2><%= @school.name %></h2>
	    <p><i><%=@school.address %></i></p>
	    <p><%= @school.desc %></p>
	    <p><strong>Contact details:</strong></p>
	    <p>Phone: <%= @school.phone %></p>
	    <p>Email: <%= @school.email  %></p>
	</div>
    </div>

    <h3 class = "text-center">Classes</h3>  
    <% if @school.subjects.empty? %>
	<h4 class = "text-center">School has no classes yet</h4>
    <% else %>
	<%= @school.subjects.each do |subject| %>
	    <%= render "subjects/subject", subject: subject %>
	<% end %>
    <% end %>
</div>
