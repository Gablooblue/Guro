<p id="notice"><%= notice %></p>

<div class = "container" id = "default-padding">
    <div class = "col-md-12">
	<div class = "panel panel-default">
	    <div class = "panel-body">
		<h2><%= @subject.name %></h2> 
		<p><strong>School: </strong><%= link_to @subject.school.name, school_path(@subject.school) %></i></p>
		<p><%= @subject.desc %></p>
	    </div>
	</div>
    </div>
    <h3 class = "text-center">Professors</h3>
    <% if @professors.empty? %>
	<h4 class = "text-center">No professors here</h4>
    <% else %>
	<% @professors.each do |professor|%>
		<div class = "col-md-6">
		    <div class = "panel panel-default">
			<div class = "panel-body">
			    <h4><%= link_to professor.last_name + ", " + professor.first_name, professor_path(professor) %></h4> 
			    <p><strong>Rating: </strong><%= professor.average_rating(@subject.id)%>/5.0</p>
			</div>
		    </div>
		</div>
	<% end %>
    <% end %>
</div>
