<div class = "container" id = "default-padding">
    <div class = "col-md-6">
	<div class = "panel panel-default">
	    <div class = "panel-heading">
		Schools
	    </div>
	    <div class = "panel-body">
		<%= link_to "Create school", new_school_path(), class: "btn btn-link" %>
		<% if @schools.empty? %>
		    <p class = "text-center"><i>No schools here</i></p>
		<% else %>
		    <div class = "list-group">
			<% @schools.each do |school| %>
			    <%= link_to school.name, school_path(school), class: "list-group-item" %>
			<% end %>
		    </div>
		<% end %>
	    </div>
	</div>
    </div>
    <div class = "col-md-6">
	<div class = "panel panel-default">
	    <div class = "panel-heading">
		Subjects
	    </div>
	    <div class = "panel-body">
		<%= link_to "Create subject", new_subject_path(), class: "btn btn-link" %>
		<% if @subjects.empty? %>
		    <p class = "text-center"><i>No subjects here</i></p>
		<% else %>
		    <div class = "list-group">
			<% @subjects.each do |subjects| %>
			    <%= link_to subject.name, subject_path(subject), class: "list-group-item" %>
			<% end %>
		    </div>
		<% end %>
	    </div>
	</div>
    </div>
    <div class = "col-md-6">
	<div class = "panel panel-default">
	    <div class = "panel-heading">
		Professors	
	    </div>
	    <div class = "panel-body">
		<%= link_to "Create professor", new_professor_path(), class: "btn btn-link" %>
		<% if @professors.empty? %>
		    <p class = "text-center"><i>No professors here</i></p>
		<% else %>
		    <div class = "list-group">
			<% @professors.each do |professor| %>
			    <%= link_to professor.name, professor_path(professor), class: "list-group-item" %>
			<% end %>
		    </div>
		<% end %>
	    </div>
	</div>
    </div>
</div>
