<!DOCTYPE html>
<html>
  <head>
    <title>Guro</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<nav id="myToolbar" class = 'navbar navbar-default navbar-fixed-top'>
	    <div class="container">
		<div class = "navbar-header">
		    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		    </button>
		    <%= link_to "Guro", root_path, class: "navbar-brand" %>
		</div>
		<div class= "collapse navbar-collapse"  id="navbar">
		    <ul class = "nav navbar-nav">
			<li>
			    <%= link_to "Schools", schools_path %>
			</li>
			<li>
			    <%= link_to "Classes", subjects_path %>
			</li>
			<li>
			    <%= link_to "Professors", professors_path%>
			</li>
		    </ul>
		    <ul class = "nav navbar-nav navbar-right">
			<% if !user_signed_in? %>
			    <li class = "dropdown">
				<a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
				    For admins<span class = "caret"></span>
				</a>
				<ul class = "dropdown-menu">
				    <li><%= link_to "Login", new_user_session_path() %></li>
				    <li><%= link_to "Register", new_user_registration_path() %></li>
				</ul>
			    </li>
			<% else %>
			    <li class = "dropdown">
				<a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
				    Admin Menu<span class = "caret"></span>
				</a>
				<ul class = "dropdown-menu">
				    <li>
					<%= link_to "Admin Panel", admin_index_path()%>
				    </li>	
				    <li>
					<%= link_to "Logout", destroy_user_session_path, method: :delete %>
				    </li>
				</ul>
			    </li>
			<% end %>
		    </ul>
		</div>
	    </div>
	</nav>
    <%= yield %>
  </body>
</html>
